{
    "name": "Uralserver Notifier",
    "version": "1.0",
    "description": "Checks the current session for map, players and their score",
    "permissions": [
        "storage",
        "notifications"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/favicon-16.png",
            "32": "images/favicon-32.png",
            "48": "images/favicon-48.png",
            "64": "images/favicon-64.png",
            "128": "images/favicon-128.png"
        }
    },
    "icons": {
        "16": "images/favicon-16.png",
        "32": "images/favicon-32.png",
        "48": "images/favicon-48.png",
        "64": "images/favicon-64.png",
        "128": "images/favicon-128.png"
    },
    "manifest_version": 2
}